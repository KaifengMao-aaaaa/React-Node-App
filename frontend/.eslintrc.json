{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        "array-callback-return": "off",
        "no-unused-vars": ["error", {
            "args": "none",
            "varsIgnorePattern": "^_",
            "caughtErrors": "none",
            "ignoreRestSiblings": true,
            "vars": "all"
        }],
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
